<div class="container">

  <div class="mainNav mb-4">
    <nav class="navbar navbar-expand-lg navbar-dark">
      <img src="white-tree.png" class="mr-2" style="width:30px; height: auto;">
      <a class="navbar-brand" href="/">RecipeTree</a>

      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent"
        aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>

      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav mr-auto">
          <li class="nav-item active">
            <a class="nav-link" href="/">HOME <span class="sr-only">(current)</span></a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/addrecipe">ADD RECIPE</a>
          </li>
        </ul>
      </div>

    </nav>
  </div>

  <div class="row">
      <div class="card mt-4 mx-auto mb-4" style="width: 1110px;">

        <img class="card-img-top" src="matcha.jpg" alt="Chef image">

        <!-- Text Overlay -->
        <div class="card-img-overlay title" style="margin-top: 150px;">
          <h1 class="card-title white-text" style="font-size:50px;text-align:center;">Welcome to RecipeTree</h1>
          <h3 class="card-text white-text" style="text-align:center;">Let's get cooking!</h3>
        </div>

        <div class="card-body card-bg">

          <form class="clearfix mb-4" action="POST">

          <div id="recipe-list" class="list-group">
            <div class="row gallery-row text-center">
                {{#each recipes}}

                  <div class="gallery col-md-3 col-6">
                    <a href="recipes/{{this.id}}">
                      <img class="img-responsive" src="{{this.picture}}" onerror="this.onerror=null; this.src='../public/img/food-tree.jpg'" alt="recipe-image" width="600" height="400">
                    </a>
                    <div class="desc mt-2">{{this.name}}</div>
                    <button class="btn btn-danger delete mt-2 mb-3 btn-sm">X</button>
                  </div>
                 
                {{/each}}
            </div>
          </div>

        </div>
      </div>

  </div>

</div>

<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<script src="/js/index.js"></script>


