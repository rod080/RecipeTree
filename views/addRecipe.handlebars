          <div class="form-group">
            <label for="example-text">Dish Name</label>
            <input type="text" id="recipe-name" class="form-control" aria-describedby="example-text"
              placeholder="Enter name of dish!">
          </div>

          <div class="form-group">
            <label for="example-text">Type of Food</label>
            <input type="text" id="typeOfFOod" class="form-control" aria-describedby="example-text"
              placeholder="Is it Mexican!? Thai? Indian?">
          </div>

          <div class="form-group">
            <label for="exampleFormControlSelect1">From 1-5 how pricey is it to make this dish? (1 being inexpensive and
              5 being most expensive) </label>
            <select class="form-control" id="exampleFormControlSelect1">
              <option>1</option>
              <option>2</option>
              <option>3</option>
              <option>4</option>
              <option>5</option>
            </select>
            <div class="form-group">
              <label for="example-description">Ingredients</label>
              <textarea class="form-control" id="ingredients" aria-describedby="example-description"
                placeholder="Ingredients go here! Include measurements!"></textarea>
            </div>

            <div class="form-group">
              <label for="example-description">Instructions</label>
              <textarea class="form-control" id="instructions" aria-describedby="example-description"
                placeholder="Instructions go here! Explain as if the user is 5! "></textarea>
            </div>

            <div class="form-group">
              <label for="example-description">Share your thoughts!</label>
              <textarea class="form-control" id="reflection" aria-describedby="example-description"
                placeholder="Use this space for yourself. We would love it if you would use it to tell us more about your dish! Describe your dish or its history! Make it sweet!"></textarea>
            </div>


            <div class="form-check">
              <input class="form-check-input" type="checkbox" value="" id="defaultCheck1">
              <label class="form-check-label" for="defaultCheck1">
                Personal Recipe
              </label>
            </div>
            <div class="form-check">
              <input class="form-check-input" type="checkbox" value="" id="defaultCheck2" disabled>
              <label class="form-check-label" for="defaultCheck2">
               Share with Community
              </label>
            </div>

            <button id="upload_widget" class="cloudinary-button">Upload files</button>

            <script src="https://widget.cloudinary.com/v2.0/global/all.js" type="text/javascript"></script>

            <script type="text/javascript">
              var myWidget = cloudinary.createUploadWidget({
                cloudName: 'dw4tz6vyo',
                uploadPreset: 'ixrfqkcb'
              }, (error, result) => {
                if (!error && result && result.event === "success") {
                  console.log('Done! Here is the image info: ', result.info);
                }
              }
              )
              document.getElementById("upload_widget").addEventListener("click", function () {
                myWidget.open();
              }, false);
            </script>

            <button id="submit" class="btn btn-primary float-right">Submit</button>
